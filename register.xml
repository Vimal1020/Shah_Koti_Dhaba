<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#68C66C"
    tools:context=".Register">


    <EditText
        android:id="@+id/username_register"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="200dp"
        android:background="#E4DADA"
        android:hint="Username"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="#000"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password_register"
        android:layout_alignLeft="@+id/username_register"
        android:layout_marginLeft="-83dp"
        android:layout_marginBottom="29dp"
        android:text="UserName"
        android:textColor="#000" />

    <EditText
        android:id="@+id/password_register"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_register"
        android:layout_alignEnd="@+id/username_register"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-2dp"
        android:background="#EADADA"
        android:hint="Password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:padding="20dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_register"
        android:layout_alignStart="@+id/password_register"
        android:layout_marginStart="-85dp"
        android:layout_marginTop="29dp"
        android:text="Password"
        android:textColor="#000"
        tools:ignore="HardcodedText" />


    <EditText
        android:id="@+id/confirm"
        android:layout_width="139dp"
        android:layout_height="57dp"
        android:layout_below="@+id/username_register"
        android:layout_alignEnd="@+id/username_register"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="-3dp"
        android:background="#EADADA"
        android:gravity="center"
        android:hint="Confirm"
        android:inputType="textPassword"
        android:importantForAutofill="no"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/confirm_text"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_register"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/confirm"
        android:text="Confirm Password"
        android:textColor="#000"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/register_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm"
        android:layout_alignLeft="@+id/confirm"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="18dp"
        android:text="Register"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_but"
        android:layout_alignLeft="@+id/register_but"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="15dp"
        android:text="Login"
        tools:ignore="HardcodedText" />

</RelativeLayout>
